            "default": {},
            "examples": [
                {
                    "latest_version": "1.6",
                    "url": "https://www.raspberrypi.org/software/",
                    "default_os": "Raspberry Pi OS (32-bit)",
                    "embedded_default_os": "Raspberry Pi OS (32-bit)",
