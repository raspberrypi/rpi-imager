                    "examples": [
                        "https://www.raspberrypi.org/software/"
                    ]
                },
                "default_os": {
                    "$id": "#/properties/imager/properties/default_os",
                    "type": "string",
                    "title": "default_os",
                    "description": "Optional. If set this OS will be selected automatically, without the user having to press 'CHOOSE OS'",
                    "default": "",
                    "examples": [
                        "Raspberry Pi OS (32-bit)"
                    ]
                },
                "embedded_default_os": {
                    "$id": "#/properties/imager/properties/embedded_default_os",
                    "type": "string",
                    "title": "embedded_default_os",
                    "description": "Optional. Same as default_os but only applied if user is running the embedded Imager edition.",
                    "default": "",
                    "examples": [
                        "Raspberry Pi OS (32-bit)"
                    ]
                },
                "embedded_default_destination": {
                    "$id": "#/properties/imager/properties/embedded_default_destination",
                    "type": "string",
                    "title": "The embedded_default_destination schema",
                    "description": "Optional. If set and the user is running the embedded Imager edition, this device will be automatically selected as destination drive.",
                    "default": "",
                    "examples": [
                        "/dev/mmcblk0p1"
                    ]
                },
                "devices": {
                    "$id": "#/properties/imager/properties/devices",
                    "type": "array",
                    "title": "The devices schema",
                    "description": "Optional. Array of device definitions that can be selected by the user.",
                    "default": [],
                    "items": {
                        "$id": "#/properties/imager/properties/devices/items",
                        "type": "object",
                        "title": "Device entry",
                        "description": "An entry for a Raspberry Pi device.",
                        "default": {},
                        "examples": [
                            {
                                "name": "Raspberry Pi 4",
                                "description": "4GB, 8GB and 2GB variants",
                                "icon": "icons/pi4.png",
                                "tags": ["pi4"],
                                "matching_type": "exclusive",
                                "architecture": "armv8"
                            }
                        ],
                        "required": [
                            "name",
                            "description",
                            "tags"
                        ],
                        "properties": {
                            "name": {
                                "$id": "#/properties/imager/properties/devices/items/properties/name",
                                "type": "string",
                                "title": "The name schema",
                                "description": "Name of device as shown in the 'CHOOSE DEVICE' list.",
                                "default": "",
                                "examples": [
                                    "Raspberry Pi 4"
                                ]
                            },
                            "description": {
                                "$id": "#/properties/imager/properties/devices/items/properties/description",
                                "type": "string",
                                "title": "The description schema",
                                "description": "Description of device as shown in the 'CHOOSE DEVICE' list.",
                                "default": "",
                                "examples": [
                                    "4GB, 8GB and 2GB variants"
