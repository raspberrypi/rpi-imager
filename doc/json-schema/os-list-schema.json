                                "$id": "#/properties/imager/properties/devices/items/properties/icon",
                                "type": "string",
                                "title": "The icon schema",
                                "description": "Optional. Icon of the device as shown in the 'CHOOSE DEVICE' list.",
                                "default": "",
                                "examples": [
                                    "icons/pi4.png"
                                ]
                            },
                            "tags": {
                                "$id": "#/properties/imager/properties/devices/items/properties/tags",
                                "type": "array",
                                "title": "The tags schema",
                                "description": "Array of strings representing device tags used for filtering OS lists.",
                                "default": [],
                                "examples": [
                                    ["pi4"],
                                    ["pi3", "pi3b"]
                                ]
                            },
                            "matching_type": {
                                "$id": "#/properties/imager/properties/devices/items/properties/matching_type",
                                "type": "string",
                                "title": "The matching_type schema",
                                "description": "Optional. Matching algorithm for device filtering. Defaults to 'exclusive'.",
                                "default": "exclusive",
                                "examples": [
                                    "exclusive",
                                    "inclusive"
                                ]
                            },
                            "architecture": {
                                "$id": "#/properties/imager/properties/devices/items/properties/architecture",
                                "type": "string",
                                "title": "The architecture schema",
                                "description": "Optional. Preferred architecture for this device (armel, armhf, armv8). When specified, OS items matching this architecture will be sorted to the top of sublists.",
